// Cooley and Hansen's model with indivisible labor
// Log-linearized
parameters beta delta theta B gss; // rhoa rhog siga sigg rss wss pss kss hss;
var lk lh lp lw lr lg lc;

beta = .99;
delta = .025;
theta = .36;
A = 1.72;
h0 = .583;
B = A*log(1-h0)/h0;
pi4ss = -0.04; // annual inflation
gss = (1+pi4ss)^(1/4); // quarterly inflation 

// steady state version of the model
model;

1 = beta*(1+exp(lr)-delta);

B/exp(lw) = -beta*1/exp(lc+lg);

exp(lp+lc+lg) = exp(lg);

exp(-lp) = exp(lw+lh) + (exp(lr)-delta)*exp(lk);

exp(lw) = (1-theta)*exp(theta*(lk-lh));

exp(lr) = theta*exp((theta-1)*(lk-lh));

lg = log(gss);

end;

steady;